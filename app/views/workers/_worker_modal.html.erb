<%= button_tag(type: 'button', class: "btn btn-outline-success worker", data: {toggle:"modal", target: "#exampleModalCenter#{worker.id}" } ) do %>
  <% content_tag(:div, 'Mettre à jour') %>
<% end %>

<!-- Modal from bootstrap for worker updating -->
<div class="modal fade" id='<%= "exampleModalCenter#{worker.id}"%>' tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id= "exampleModalCenterTitle">Mettre à jour un médecin</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>Fiche d'information de <%= worker.first_name %></h1>
        <%= simple_form_for worker, wrapper: :horizontal_form, remote: true do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :status, as: :select2, collection: @status_collection, include_blank: false %>
          <%= f.input :price, as: :select2, collection: @prices, include_blank: false %>
          <%= f.button :submit, "Mettre à jour", class:'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
