<%= simple_form_for @shift do |f| %>
  <%= f.input :start_date, as: :date,
      :placeholder => 'Select date',
      label: "Shift date: " %>
  <%= f.association :worker, as: :select2, collection: @workers, :label_method => :first_name, :value_method => :id %>
  <%= f.button :submit %>
<% end %>


