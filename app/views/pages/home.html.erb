<div class='container'>
  <h1 class='title'>Planning de garde</h1>
  <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Prénom</th>
          <th scope="col">Statut</th>
          <th scope="col">Cout(€)</th>
        </tr>
      </thead>
    <% @shifts.each do |shift| %>
      <tbody>
        <tr>
          <td> <%= shift.start_date %></td>
          <td> <%= shift.worker.first_name %></td>
          <td> <%= shift.worker.status %></td>
          <td> <%= shift.worker.price %></td>
        </tr>
      </tbody>
    <% end %>
  </table>

  <div>
    <%= render 'worker_form' %>
    <%= render 'shift_form' %>
    <%= link_to 'Tous les medecins',workers_path, class:"btn btn-primary" %>
  </div>
</div>
